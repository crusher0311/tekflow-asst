{
  "manifest_version": 3,
  "name": "TekFlow Assistant",
  "version": "1.0.0",
  "description": "TekFlow SaaS - Professional promise time management for automotive shops with cloud sync and advanced analytics",
  "permissions": [
    "sidePanel",
    "storage",
    "clipboardWrite",
    "activeTab",
    "scripting",
    "webRequest",
    "webNavigation",
    "notifications",
    "system.display"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Open Side Panel"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": ["styles.css", "images/*", "addAIconcern.js", "apiClient.js", "auth.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "host_permissions": [
    "*://api.openai.com/*",
    "*://firebase.googleapis.com/*",
    "*://firestore.googleapis.com/*",
    "*://shop.tekmetric.com/*",
    "*://localhost:3000/*"
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": ["https://shop.tekmetric.com/*"],
      "js": ["addAIconcern.js", "addAInewAppointment.js", "content.js"]
    },
    {
      "matches": ["https://shop.tekmetric.com/admin/shop/*/repair-orders/*"],
      "js": ["promiseTimeContent.js"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}



