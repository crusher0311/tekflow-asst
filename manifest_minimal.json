{
  "manifest_version": 3,
  "name": "Customer Concern Assistant",
  "version": "4.0",
  "description": "Side Panel Production",
  "permissions": [
    "sidePanel",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Open Side Panel"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  }
}